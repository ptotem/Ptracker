<div class="block">
  <div class="content">
    <h2 class="title">
      Projects
      <a class="btn btn-primary pull-right" data-backdrop="static" data-toggle="modal" href="#new_project">New Project</a>

      <div class="modal hide fade" id="new_project">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">Ã—</a>

          <h3>New Project</h3>
        </div>
        <%= semantic_form_for @project do |f| %>
            <div class="modal-body">
              <%= f.inputs :name %>
              <h5 style="margin-top: -40px"><%= f.check_box :internal %> Internal</h5>
            </div>
            <div class="modal-footer">
              <%= f.submit "Save Changes", :class => "btn btn-primary" %>
              <a href="#" class="btn btn-danger" data-dismiss="modal">Close</a>
            </div>
            </div>
        <% end %>
        </h2>

    <div class="inner">
      <table class="table table-striped">
        <% @projects.each do |project| -%>
            <tr class="<%= cycle("odd", "even") %>">
              <td style="font-size: 24px;padding:10px;">
                <%= link_to raw(project.name), edit_project_path(project) %>
              </td>
              <td>
                <%= project.complete ? "Complete" : "" %>
              </td>
              <td class="last">
                <div class="btn-group pull-right">
                  <%= link_to "Tasks", project_tasks_path(project), :class => "btn btn-primary" %>
                  <%= link_to "Mark Complete", edit_project_path(project), :class => "btn btn-success" %>
                  <%= link_to "Delete", project_path(project), :method => :delete, :confirm => "Are you sure?", :class => "btn btn-danger" %>
                </div>
              </td>
            </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

